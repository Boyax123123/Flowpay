<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        tools:context=".LikesActivity">

    <!-- Title -->
    <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/button_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="28dp" />

    <!-- Wallet Balance -->
    <TextView
            android:id="@+id/tv_wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            tools:text="â‚±0.00"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"
            app:layout_constraintEnd_toStartOf="@+id/wallet_icon" />

    <!-- Wallet Icon -->
    <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_wallet"
            android:contentDescription="Wallet"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"
            app:layout_constraintEnd_toStartOf="@+id/mail_icon" />

    <!-- Mail Icon -->
    <ImageView
            android:id="@+id/mail_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_mail"
            android:contentDescription="Mail"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_liked_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/confirmation_panel"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_product" />

    <!-- Confirmation Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/confirmation_panel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/navbar_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#F0F0FF">

            <!-- Selected Product Info -->
            <TextView
                android:id="@+id/tv_selected_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_buy"/>

            <!-- Selected Product Price -->
            <TextView
                android:id="@+id/tv_selected_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_selected_product"/>

            <!-- Error Message -->
            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insufficient balance"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_selected_price"/>

            <!-- Buy Button -->
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy now"
                android:textAllCaps="false"
                android:backgroundTint="#FFB6C1"
                android:textColor="@android:color/black"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Navbar Fragment -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/navbar_container"
            android:name="com.mine.flowpay.fragments.NavbarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
